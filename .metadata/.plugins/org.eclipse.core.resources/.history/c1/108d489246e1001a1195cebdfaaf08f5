#ifndef TASKS_SPI_H_
#define TASKS_SPI_H_

//-----------------------INCLUDES----------------------------------------//

//---------------------TASKS INCLUDES-----------------------------------//

//---------------------PUBLIC DEFINES---------------------------------//

typedef enum {
	CS_Acc 	= 0,
	CS_Gyro = 1,
	CS_Mag 	= 2,
	CS_Baro = 3,

} SPI_ChipSelectTypeDef;

//-------------------PUBLIC VARIABLES----------------------------------//

//--------------------FUNCTION HEADERS----------------------------------//
void spi_initialise(void);
void spi_read(
		SPI_ChipSelectTypeDef cs, //chip select
		uint8_t addr, //start address to read from
		uint8_t* buffer, //buffer to store read result
		uint8_t length // lenght of the buffer
		);
void spi_write(SPI_ChipSelectTypeDef cs);


#endif /* TASKS_SPI_H_ */
