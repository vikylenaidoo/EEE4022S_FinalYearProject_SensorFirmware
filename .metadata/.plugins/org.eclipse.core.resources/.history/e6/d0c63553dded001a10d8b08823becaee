#ifndef TASKS_GNSS_H_
#define TASKS_GNSS_H_

//-----------------------INCLUDES----------------------------------------//
#include "uart.h"

//---------------------TASKS INCLUDES-----------------------------------//

//---------------------PUBLIC DEFINES---------------------------------//
//gps data struct
struct GNSS_DataStruct{
	char time		[9];
	char status;
	char latitude	[10];
	char NS;
	char longitude	[10];
	char EW;
	char speed		[5];
	char course		[5];
};


struct GNSS_UBX_Data_Struct{
	//only keep important variables to copy from ubx message

	uint8_t valid; //validity flag: 3=validMessage	2=fullyResolved	1=validTime	0=ValidDate

	uint8_t fixType;	//GNSS fix type: 0=no_fix	1=dead_reckon	2=2d	3=3d	4=GNSS+Dead_reckon	5=time_fix_only


};


//-------------------PUBLIC VARIABLES----------------------------------//

//--------------------FUNCTION HEADERS----------------------------------//
/*read new data from the gnss_log buffer and out it in the struct*/
GNSS_StatusTypeDef gnss_read_new_data();



#endif /* TASKS_GNSS_H_ */
